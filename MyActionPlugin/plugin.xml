<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="My Action Category"
            id="MyActionPlugin">
      </category>
      <view
            name="Action View"
            icon="icons/about.gif"
            category="MyActionPlugin"
            class="my.actionplugin.views.ActionView"
            id="my.actionplugin.views.ActionView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            description="Описание для Action Set #1"
            id="MyActionPlugin.ActionSet1"
            label="Action Set #1"
            visible="true">
         <menu
               icon="icons/online.gif"
               id="MyActionPlugin.ActionSet1.menu1"
               label="ActionSet-Menu1"
               path="window/additions">
            <groupMarker
                  name="groupMarker1">
            </groupMarker>
            <separator
                  name="separator1">
            </separator>
            <groupMarker
                  name="additions">
            </groupMarker>
         </menu>
         <action
               icon="icons/chat.gif"
               id="MyActionPlugin.as1.action1"
               label="AS1 Action1"
               menubarPath="window/MyActionPlugin.ActionSet1.menu1/groupMarker1"
               pulldown="true"
               style="push"
               toolbarPath="org.eclipse.debug.ui.launchActionSet/mytoolbar">
            <enablement>
               <pluginState
                     id="MyActionPlugin.pluginState1"
                     value="installed">
               </pluginState>
            </enablement>
         </action>
         <action
               icon="icons/away.gif"
               id="MyActionPlugin.as1.action2"
               label="AS1 Action2"
               menubarPath="window/MyActionPlugin.ActionSet1.menu1/separator1"
               pulldown="true"
               style="push"
               toolbarPath="org.eclipse.debug.ui.launchActionSet/mytoolbar">
         </action>
         <action
               icon="icons/dnd.gif"
               id="MyActionPlugin.as1.action3"
               label="AS1 Action3"
               menubarPath="window/MyActionPlugin.ActionSet1.menu1/additions"
               pulldown="true"
               style="push"
               toolbarPath="org.eclipse.debug.ui.launchActionSet/debug">
         </action>
      </actionSet>
   </extension>

</plugin>
