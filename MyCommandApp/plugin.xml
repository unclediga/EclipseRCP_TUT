<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="mytestapp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="mytestapp.Perspective"
            id="MyTestApp.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="mytestapp.View"
            id="MyCommandApp.view">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="MyCommandApp.view">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="mytestapp.handler.TestHandler1"
            id="MyCommandApp.command1"
            name="Cmd 1">
      </command>
      <command
            defaultHandler="mytestapp.handler.TestHandler2"
            id="MyCommandApp.command2"
            name="Cmd 2">
      </command>
      <command
            defaultHandler="mytestapp.handler.DefTestHandler"
            id="MyCommandApp.command3"
            name="Cmd 3">
      </command>
      <command
            id="MyCommandApp.command4"
            name="Show Selection">
      </command>
   </extension>
   <extension
         name="В Главное меню"
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <command
               commandId="MyCommandApp.command3"
               label="Command 3"
               style="push">
         </command>
         <menu
               label="My Menu">
            <command
                  commandId="MyCommandApp.command1"
                  style="push">
            </command>
            <command
                  commandId="MyCommandApp.command2"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         name="PopUp"
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any">
         <command
               commandId="MyCommandApp.command1"
               label="pop up 1 (popup.any)"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?before=edit">
         <command
               commandId="MyCommandApp.command1"
               label="pop up 1 (popup.any + before edit)"
               style="push">
         </command>
         <command
               commandId="MyCommandApp.command2"
               label="pop up 2 (popup.any + before edit)"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:MyCommandApp.view?endof=edit">
         <command
               commandId="MyCommandApp.command1"
               label="pop up 1 (popup.view + endof edit)"
               style="push">
         </command>
         <command
               commandId="MyCommandApp.command2"
               label="pop up 2 (popup.view + endof edit)"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         name="View менюшки"
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:MyCommandApp.view">
         <command
               commandId="MyCommandApp.command3"
               icon="icons/alt_window_16.gif"
               label="View Cmd3"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:MyCommandApp.view">
         <command
               commandId="MyCommandApp.command3"
               icon="icons/alt_window_16.gif"
               label="Tool Cmd3 "
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:MyCommandApp.view">
         <command
               commandId="MyCommandApp.command3"
               label="popup cmd3 (no additions)"
               style="push">
         </command>
         <command
               commandId="MyCommandApp.command4"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:MyCommandApp.view?before=additions">
         <command
               commandId="MyCommandApp.command3"
               label="popup cmd3 (before additions)"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="mytestapp.handler.ShowSelectedHandler"
            commandId="MyCommandApp.command4">
      </handler>
   </extension>

</plugin>
